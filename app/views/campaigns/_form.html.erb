<div>
  <%= simple_form_for campaign, data: { controller: "form", form_value: owner } do |f| %>
    <%= f.input :title, label: false, disabled: !owner, input_html: { data: {form_target:"input"}}  %>
    <%= f.input :estimated_duration, label: false, disabled: !owner, input_html: { data: {form_target:"input"}}  %>
    <%= f.button :submit if owner %>
  <% end %>
</div>
