<% @campaigns.each do |campaign| %>
  <div class="campaign">
    <div class="title"> <%= campaign.title %> </div>
    <div class="duration">  <%= campaign.estimated_duration %>  </div>
  </div>
<% end %>

<% if current_user.instance_of?(Expert) %>
  <div class="form-container">
    <%= render "form", campaign: @campaign %>
  </div>
<% end %>
